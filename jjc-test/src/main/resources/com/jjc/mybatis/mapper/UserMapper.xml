<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jjc.mybatis.mapper.UserMapper">

    <resultMap id="userMap" type="com.jjc.mybatis.domain.User">
        <result property="id" column="id" />
        <result property="name" column="name"/>
        <result property="sex" column="sex" typeHandler="com.jjc.mybatis.typehandler.SexEnumTypeHandler"/>
        <result property="roleName" column="role_name"/>
    </resultMap>

    <sql id="User_Column_List">
        `id`, name, sex, role_name
    </sql>

    <select id="selectById" resultMap="userMap">
        select
        <include refid="User_Column_List"/>
        from user
        where id = #{id, javaType=int, jdbcType=INTEGER}
    </select>

</mapper>