<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jjc.mybatis.mapper.UserMapper">

    <sql id="User_Column_List">
        `id`, name
    </sql>

    <select id="selectById" resultType="com.jjc.mybatis.domain.UserPO">
        select
        <include refid="User_Column_List"/>
        from user
        where id = #{id}
    </select>

</mapper>